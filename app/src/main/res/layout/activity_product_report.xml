<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductReport">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/view_foster_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorpink"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <TextView
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Product Report"
                android:textSize="23sp"
                android:textStyle="bold"
                android:textColor="#FFF" />

            <TextView
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="back"
                android:textSize="18sp"
                android:id="@+id/preport_back"
                android:textStyle="bold"
                android:textColor="#FFF" />

        </androidx.appcompat.widget.Toolbar>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="60dp"
    android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_marginTop="60dp"
           >

            <TextView
                android:id="@+id/donation_countcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Most Sale Product"
                android:textAlignment="center"
                android:textSize="25sp"
                android:background="@color/colorpink"/>

            <TextView
                android:id="@+id/donation_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="45dp"
                android:paddingTop="35dp"
                android:text="J-Tea"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="33sp" />
        </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:layout_marginTop="60dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Number of Purchase"
            android:textAlignment="center"
            android:textSize="25sp"
            android:background="@color/colorpink"/>

        <TextView
            android:id="@+id/preport_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp"
            android:paddingTop="35dp"
            android:text="18"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="33sp" />
    </androidx.cardview.widget.CardView>
</LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>