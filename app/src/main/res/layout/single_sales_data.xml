<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/sales_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="sales name"
        android:textColor="@android:color/black"
        android:textSize="24sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Price:"
            android:textColor="@android:color/darker_gray"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/sales_price"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="QTY:"
            android:textColor="@android:color/darker_gray"
            android:textSize="17sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Sub Price:"
            android:textColor="@android:color/darker_gray"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/sales_sub"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="QTY:"
            android:textColor="@android:color/darker_gray"
            android:textSize="17sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Order QTY:"
            android:textColor="@android:color/darker_gray"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/sales_qty"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="QTY:"
            android:textColor="@android:color/darker_gray"
            android:textSize="17sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Profit:"
            android:textColor="@android:color/darker_gray"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/sales_profit"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="QTY:"
            android:textColor="@android:color/darker_gray"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Order Date:"
            android:textColor="@android:color/darker_gray"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/sales_date"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="QTY:"
            android:textColor="@android:color/darker_gray"
            android:textSize="17sp" />
    </LinearLayout>



</LinearLayout>